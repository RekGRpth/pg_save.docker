#!/bin/sh

exec 2>&1
realpath "$0"
set -ex
PRIMARY="$(etcdctl get primary --endpoints="$ETCD" --print-value-only)"
test -n "$PRIMARY"
pg_isready --host="$PRIMARY"
HOSTNAME="$(hostname)"
pg_basebackup \
    --dbname="host=$PRIMARY application_name=$HOSTNAME" \
    --pgdata="$PGDATA" \
    --progress \
    --verbose \
    --wal-method=stream
touch "$PGDATA/standby.signal"
