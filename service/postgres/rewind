#!/bin/sh

exec 2>&1
realpath "$0"
set -ex
PRIMARY="$1"
PRIMARY_CONNINFO="host=$PRIMARY application_name=$(hostname) target_session_attrs=read-write"
pg_rewind \
    --progress \
    --restore-target-wal \
    --source-server="$PRIMARY_CONNINFO" \
    --target-pgdata=.
touch standby.signal
cat >>postgresql.auto.conf <<EOF
primary_conninfo = '$PRIMARY_CONNINFO'
EOF
