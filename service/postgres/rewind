#!/bin/sh

exec 2>&1
realpath "$0"
set -ex
PRIMARY="$(etcdctl get primary --endpoints="$ETCD" --print-value-only)"
test -n "$PRIMARY"
pg_isready --host="$PRIMARY"
HOSTNAME="$(hostname)"
SLOT="$(echo "$HOSTNAME" | tr '.' '_')"
pg_rewind \
    --progress \
    --restore-target-wal \
    --source-server="host=$PRIMARY application_name=$HOSTNAME" \
    --target-pgdata="$PGDATA"
touch "$PGDATA/standby.signal"
cat >>"$PGDATA/postgresql.auto.conf" <<EOF
primary_conninfo = 'host=$PRIMARY application_name=$HOSTNAME'
primary_slot_name = '$SLOT'

EOF
