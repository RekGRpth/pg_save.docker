#!/bin/sh

exec 2>&1
realpath "$0"
set -ex
PRIMARY="$1"
if [ -f standby.signal ]; then
    test -n "$PRIMARY"
else
    STATE="$(sed -n "s|^pg_save\.state = ||p" postgresql.auto.conf | tr -d "'")"
    test -n "$STATE"
    if [ "$STATE" == "wait_standby" ]; then
        test -n "$PRIMARY"
    fi
    if [ -n "$PRIMARY" ]; then
        /etc/service/postgres/rewind "$PRIMARY" || /etc/service/postgres/basebackup "$PRIMARY"
    fi
fi
